#!/usr/bin/env bash

# Detect which `ls` flavor is in use: GNU `ls` or macOS `ls`
if ls --color > /dev/null 2>&1; then

	export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

	COLOR_FLAG="--color"
	IGNORE_FILES_FLAG="--ignore '\$RECYCLE.BIN' --ignore 'System Volume Information'"
else

	COLOR_FLAG="-G"
	IGNORE_FILES_FLAG=""
fi

# Define CLI-related aliases
# * `map` usage:
#   - Description: List all directories containing a file
#   - Example: `find . -name .gitattributes | map dirname`
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'
alias catn='cat -n'
alias cdp='cd -'
alias df='df -h'
alias ebp="atom ${DOTFILES_PATH}/.bash_profile"
alias grep='grep -n --color=auto'
alias h='history'
alias lbp=". ${DOTFILES_PATH}/.bash_profile"
alias ls="ls -ahl ${COLOR_FLAG} ${IGNORE_FILES_FLAG}"
alias lst="ls -ahlt ${COLOR_FLAG} ${IGNORE_FILES_FLAG}"
alias map='xargs -n1'
alias path='echo -e ${PATH//:/\\n}'
alias sudo='sudo '

# Define CLI-related bindings
bind '"\e\e": "sudo !!"'

# Define CLI-, Invision-, and personal project-related aliases
for file in $DOTFILES_PATH/aliases/*; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
done

unset file;